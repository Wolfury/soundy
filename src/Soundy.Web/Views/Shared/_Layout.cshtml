@using System
<!DOCTYPE html>
<html ng-app="Soundy">
<head>
    <base href="/">
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/0.9.4/angular-material.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=RobotoDraft:300,400,500,700,400italic">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="@Url.Content("~/Content/css/toastr.css")" rel="stylesheet"/>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


<md-content class="layout" flex>
    @* Toolbar *@
    <md-toolbar>
        <div class="md-toolbar-tools">
            <md-button class="md-icon-button" aria-label="Settings">
                <md-icon class="fa fa-bars fa-2x">

                </md-icon>
            </md-button>
            <h2>
                <span>Soundy.</span>
            </h2>
            <span flex=""></span>
            <md-button class="md-icon-button" aria-label="Refresh">
                <md-icon class="fa fa-refresh fa-2x" style="color: greenyellow;"></md-icon>
            </md-button>
            <md-button class="md-icon-button" aria-label="Settings">
                <md-icon class="fa fa-cog fa-2x"></md-icon>
            </md-button>
        </div>

    </md-toolbar>
    @RenderBody()
  
</md-content>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularJs")
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/0.9.4/angular-material.min.js"></script>

    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
